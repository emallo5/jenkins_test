<?xml version="1.0" encoding="utf-8"?>
<com.aparcsystems.ui.view.LoadingLayout
    android:id="@+id/loading_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"  >
            <FrameLayout
                android:id="@+id/cameraPreview"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:foreground="@drawable/_transparent"
                android:layout_weight="1"
                />

            <ImageView
                android:id="@+id/logo"
                android:layout_marginLeft="@dimen/scan_padding"
                android:layout_marginRight="@dimen/scan_padding"
                android:layout_marginBottom="@dimen/small_padding"
                android:layout_marginTop="@dimen/medium_padding"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/logo_lightgrey"/>

            <TextView
                android:layout_marginLeft="@dimen/scan_padding"
                android:layout_marginRight="@dimen/scan_padding"
                android:layout_marginBottom="@dimen/medium_padding"
                android:layout_marginTop="@dimen/medium_padding"
                android:layout_width="match_parent"
                android:layout_below="@+id/logo"
                android:singleLine="false"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content" android:text="@string/scan" />

            <Button
                android:id="@+id/enter_manually"
                android:layout_margin="@dimen/scan_padding"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                style="@style/green_button"
                android:layout_height="wrap_content" android:text="@string/enter_manually" />
        </RelativeLayout>

</com.aparcsystems.ui.view.LoadingLayout>
