<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout"
    android:background="@color/standard_background"
    android:padding="@dimen/big_padding"
    android:orientation="vertical" android:gravity="center_horizontal">

    <include layout="@layout/logo_view" android:layout_width="wrap_content" android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:background="@drawable/border_input"
        android:layout_marginBottom="@dimen/big_input_space"
        android:layout_marginTop="@dimen/big_input_space"
        android:gravity="center_horizontal"
        android:singleLine="false"
        android:padding="10dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/continue_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/green_button"
        android:text="@string/continue_label" />

</LinearLayout>
