<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Here lies the styles and only the styles. For Theme see theme.xml -->
    <style name="green_button"  parent="droid_sans_typeface">
        <item name="android:background">@drawable/green_button_height</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="grey_button" parent="droid_sans_typeface" >
        <item name="android:background">@drawable/grey_button_height</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="photo_button" parent="droid_sans_typeface" >
        <item name="android:background">@drawable/grey_button_wide</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>
    <style name="still_dispute" parent="droid_sans_typeface">
        <item name="android:background">@color/standard_green</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="droid_sans_typeface">
        <item name="android:typeface">sans</item>
    </style>

    <style name="amount_style">
        <item name="android:typeface">sans</item>
        <item name="android:textSize">@dimen/price_size</item>
        <item name="android:textColor">@color/show_penalty_titles_color</item>
    </style>

    <style name="payment_style">
        <item name="android:typeface">sans</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/show_penalty_titles_color</item>
    </style>

    <style name="show_penalty_items_title" parent="droid_sans_typeface">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/show_penalty_titles_color</item>
    </style>
    <style name="show_penalty_items_value" parent="droid_sans_typeface" >
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/show_penalty_values_color</item>
    </style>

    <style name="show_penalty_items_value_green" parent="show_penalty_items_value">
        <item name="android:textColor">@color/standard_green</item>
    </style>

    <style name="payment_input" parent="droid_sans_typeface" >
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/payment_input</item>
    </style>


    <style name="RightJustifyTextView" parent="@android:style/Widget.TextView">
        <item name="android:singleLine">false</item>
    </style>

</resources>
